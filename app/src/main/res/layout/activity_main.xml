<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context="ru.oboturov_corp.dogenotes2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/firs_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"> </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"> </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/standard_value"
        android:layout_marginTop="-316dp">

        <ImageView
            android:id="@+id/add_folder"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="13dp"
            android:clickable="true"
            android:contentDescription="@string/add_btn_dscrp"
            android:src="@drawable/folder"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/add_note"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="13dp"
            android:clickable="true"
            android:contentDescription="@string/add_btn_dscrp"
            android:src="@drawable/note"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/doge_fab"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:contentDescription="@string/add_btn_dscrp"
            android:src="@drawable/doge" />

        <ImageView
            android:contentDescription="@string/delete_btn"
            android:visibility="gone"
            android:id="@+id/delete_btn"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/delete"
            android:layout_marginEnd="230dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"/>

        <ImageView
            android:contentDescription="@string/deselect_btn"
            android:visibility="gone"
            android:id="@+id/deselect_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/deselect"
            android:layout_marginEnd="360dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="25dp"/>

    </RelativeLayout>

</LinearLayout>
