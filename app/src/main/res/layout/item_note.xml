<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_note"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="@dimen/standard_value">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/standard_value"
        android:background="@color/note_item"
        >

        <CheckBox
            android:id="@+id/note_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/folder_name"
            android:layout_marginBottom="@dimen/standard_value"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:id="@+id/item_note_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/folder_name"
            android:gravity="center"
            android:id="@+id/item_note_text"/>

    </LinearLayout>

</android.support.v7.widget.CardView>