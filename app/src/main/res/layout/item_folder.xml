<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_folder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/my_elevation"
    app:cardCornerRadius="@dimen/my_corner_radius"
    android:layout_marginBottom="@dimen/standard_value">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/standard_value"
        android:background="@color/folder_item">

        <CheckBox
            android:id="@+id/folder_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"/>

        <ImageView
            android:layout_width="@dimen/item_folder_img_size"
            android:layout_height="@dimen/item_folder_img_size"
            android:src="@drawable/folder"
            android:contentDescription="@string/item_folder_img_description" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/standard_value"
            android:layout_marginStart="@dimen/standard_value"
            android:textSize="@dimen/folder_name"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:id="@+id/item_folder_name"/>

    </LinearLayout>

</android.support.v7.widget.CardView>